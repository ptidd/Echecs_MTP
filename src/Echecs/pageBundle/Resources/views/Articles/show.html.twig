{% extends 'EchecspageBundle::layout.html.twig' %}

{% block titre %}Echecs de Montpellier - {{article.titre}}{% endblock %}

{% block navigation %}

    {% for unepage in navigation %}
            <li><a href="{{ path('_index',{name:unepage.nomPage}) }}">{{unepage.nomPage}}</a></li>
    {% endfor %}

{% endblock %}

{% block sidebar %}

    {% for unecat in categories %}

        <li><a href="{{ path('_articles_cat',{name:unecat.nom}) }}">{{unecat.nom}}</a></li>
      
    {% endfor %}

{% endblock %}


{% block content %}
        <div class="article">
            <span  class="entry-title">{{article.titre}}</span>
            <br>
            <span id="article_date">Publi√© le {{article.date}} par {{article.AuteurId}} </span>
            <hr>
                <br>
                {{ article.contenu|raw }}
        </div>
{% endblock %}

